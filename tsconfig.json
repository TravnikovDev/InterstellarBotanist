{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES6",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/phaser/types"],
    "types": ["Phaser"]
  },
  "include": ["src/**/*"]
}
